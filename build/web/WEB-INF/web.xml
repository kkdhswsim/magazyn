<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>testSerwlet</servlet-name>
        <servlet-class>test.testSerwlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodajDoBazy</servlet-name>
        <servlet-class>test.DodajDoBazy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>controler.IndexSvt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dostawcy</servlet-name>
        <servlet-class>controler.Dostawcy</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testSerwlet</servlet-name>
        <url-pattern>/testSerwlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodajDoBazy</servlet-name>
        <url-pattern>/DodajDoBazy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dostawcy</servlet-name>
        <url-pattern>/dostawcy</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
